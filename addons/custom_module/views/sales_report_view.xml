<odoo>
    <data>
        <record model="ir.ui.view" id="sales_report_wizard_view">
            <field name="name">sales.report.wizard</field>
            <field name="model">sales.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Sales Report">
                    <group>
                        <field name="from_date"/>
                        <field name="to_date"/>
                        <field name="customer"/>
                    </group>
                    <footer>
                        <button string="Generate Report" name="generate_report" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
